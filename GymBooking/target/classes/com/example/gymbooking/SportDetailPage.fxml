<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<AnchorPane prefHeight="900" prefWidth="1400" styleClass="root" stylesheets="@style.css"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.gymbooking.SportDetailController">

    <VBox fx:id="sidebar" prefWidth="200" styleClass="sidebar" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0">
        <padding>
            <Insets bottom="40" left="30" right="30" top="50" />
        </padding>
        <children>
            <HBox alignment="CENTER_LEFT" spacing="12">
                <Circle radius="8" styleClass="logo-dot" />
                <Label styleClass="logo-text" text="GYM" />
            </HBox>
            <Label styleClass="logo-text" text="ARNOCO" />
            <Region minHeight="80" VBox.vgrow="ALWAYS" />
            <VBox spacing="20" styleClass="nav-container">
                <HBox alignment="CENTER_LEFT" spacing="15" styleClass="nav-item">
                    <Circle radius="4" styleClass="nav-dot" />
                    <Label styleClass="nav-label" text="Home" />
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="15" styleClass="nav-item">
                    <Circle radius="4" styleClass="nav-dot" />
                    <Label styleClass="nav-label" text="Calendar" />
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="15" styleClass="nav-item nav-item-active">
                    <Circle radius="4" styleClass="nav-dot nav-dot-active" />
                    <Label styleClass="nav-label nav-label-active" text="Courts" />
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="15" styleClass="nav-item">
                    <Circle radius="4" styleClass="nav-dot" />
                    <Label styleClass="nav-label" text="Favorites" />
                </HBox>
            </VBox>
            <Region VBox.vgrow="ALWAYS" />
            <HBox alignment="CENTER_LEFT" spacing="15" styleClass="nav-item">
                <Circle radius="4" styleClass="nav-dot" />
                <Label styleClass="nav-label" text="Settings" />
            </HBox>
        </children>
    </VBox>

    <VBox spacing="40" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="230" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="60">

        <HBox alignment="CENTER_LEFT" spacing="20">
            <Button fx:id="backButton" onAction="#handleBackAction" styleClass="action-button" text="â† Back to Sports" />
            <VBox spacing="5">
                <Label fx:id="detailTitleLabel" styleClass="main-title" text="SPORT NAME" />
                <Label fx:id="detailSubtitleLabel" styleClass="subtitle" text="View courts, schedules, and pricing." />
            </VBox>
        </HBox>

        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS"
                    style="-fx-background-color: transparent; -fx-border-color: transparent;">
            <content>
                <VBox spacing="20" style="-fx-padding: 30; -fx-background-color: white; -fx-background-radius: 20;">
                    <Label styleClass="card-title" text="Court Availability" />

                    <VBox fx:id="slotsContainer" spacing="10">
                        <Label text="Loading slots..." styleClass="text-muted" />
                    </VBox>

                </VBox>
            </content>
        </ScrollPane>
    </VBox>
</AnchorPane>